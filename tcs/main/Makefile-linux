VPATH=. ../kernel

WEXDIR = ../../../wex
WEXLIB = $(WEXDIR)/wexuxwx3.a
LKDIR = ../../../lk
LKLIB = $(LKDIR)/lkuxwx3.a

CC = gcc
CXX = g++
CFLAGS = -g -I. -I../ -I../kernel -I$(WEXDIR)/include -I$(LKDIR) -I../ssc -I../recore -DWEX_USE_LK -DLK_USE_WXWIDGETS `wx-config-3 --cflags`
CXXFLAGS = $(CFLAGS)
LDFLAGS = $(WEXLIB) $(LKLIB) `wx-config-3 --libs` `wx-config-3 --libs aui` `wx-config-3 --libs stc` -lm 

OBJECTS = \
	tcskernel.o \
	tcslayout.o \
	tcsmain.o \
	tcsscript.o
	
TARGET = TCSConsole

$(TARGET): $(OBJECTS) $(WEXLIB) 
	$(CXX) -g -o $@ $^ $(LDFLAGS)
	
clean:
	rm -f $(TARGET) $(OBJECTS)
	rm -rf $(TARGET).app
