VPATH = ../sdktool

WEXDIR = ../../wex
WEXLIB = $(WEXDIR)/wexuxwx3.a
LKDIR = ../../lk
LKLIB = $(LKDIR)/lkuxwx3.a

CC = gcc
CXX = g++
CFLAGS =  -std=c++0x -g -O2 -I. -I$(WEXDIR)/include -I$(LKDIR)/include -I../ssc -I../shared -DLK_USE_WXWIDGETS `wx-config-3 --cflags`
#CXXFLAGS = $(CFLAGS) 
LDFLAGS = $(WEXLIB) $(LKLIB) `wx-config-3 --libs stc` `wx-config-3 --libs aui` `wx-config-3 --libs` -lm  -lfontconfig -ldl -lcurl -stdlib=libc++
CXXFLAGS=-stdlib=libc++ -std=c++11 $(CFLAGS)
OBJCXXFLAGS=-stdlib=libc++ -std=c++11


OBJECTS  = \
	dataview.o \
	dllinvoke.o \
	editvariable.o \
	scripting.o \
	sscdev.o
	
TARGET = SDKtool

$(TARGET): $(OBJECTS) $(WEXLIB) 
	$(CXX) -g -o $@ $^ $(LDFLAGS)
	
clean:
	rm -f $(TARGET) $(OBJECTS)
